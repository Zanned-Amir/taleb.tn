<html lang='{{lang}}'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>{{t 'email.change_email.title'}}</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        line-height: 1.6;
        color: #333;
      }
      .container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
      }
      .header {
        background-color: #007bff;
        color: white;
        padding: 20px;
        text-align: center;
      }
      .content {
        padding: 20px;
        border: 1px solid #ddd;
      }
      .button {
        background-color: #007bff;
        color: white;
        padding: 12px 30px;
        text-decoration: none;
        border-radius: 5px;
        display: inline-block;
        margin: 20px 0;
      }
      .footer {
        text-align: center;
        padding: 20px;
        font-size: 12px;
        color: #666;
        border-top: 1px solid #ddd;
      }
      .warning {
        background-color: #fff3cd;
        padding: 10px;
        border-radius: 5px;
        margin: 10px 0;
        color: #856404;
      }
      .new-email {
        background-color: #e7f3ff;
        padding: 10px;
        border-left: 4px solid #007bff;
        margin: 10px 0;
      }
    </style>
  </head>
  <body>
    <div class='container'>
      <div class='header'>
        <h1>{{t 'email.change_email.title'}}</h1>
      </div>
      <div class='content'>
        <p>{{t 'email.change_email.greeting'}}, {{firstName}}</p>

        <p>{{t 'email.change_email.message'}}</p>

        <div class='new-email'>
          <strong>{{t 'email.change_email.new_email'}}:</strong>
          {{newEmail}}
        </div>

        <p>{{t 'email.change_email.confirmation_required'}}</p>

        <a href='{{confirmationLink}}' class='button'>{{t
            'email.change_email.confirm_button'
          }}</a>

        <div class='warning'>
          <strong>{{t 'email.change_email.warning'}}</strong>
          {{t 'email.change_email.link_expiration'}}
        </div>

        <p>{{t 'email.change_email.no_action_required'}}</p>
      </div>
      <div class='footer'>
        <p>{{t 'email.footer_text'}}</p>
        <p>&copy;
          {{currentYear}}
          Taleb.tn.
          {{t 'email.all_rights_reserved'}}</p>
      </div>
    </div>
  </body>
</html>