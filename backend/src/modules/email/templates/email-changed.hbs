<html lang='{{lang}}'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>{{t 'email.email_changed.title'}}</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        line-height: 1.6;
        color: #333;
      }
      .container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
      }
      .header {
        background-color: #28a745;
        color: white;
        padding: 20px;
        text-align: center;
      }
      .content {
        padding: 20px;
        border: 1px solid #ddd;
      }
      .button {
        background-color: #28a745;
        color: white;
        padding: 12px 30px;
        text-decoration: none;
        border-radius: 5px;
        display: inline-block;
        margin: 20px 0;
      }
      .footer {
        text-align: center;
        padding: 20px;
        font-size: 12px;
        color: #666;
        border-top: 1px solid #ddd;
      }
      .success-box {
        background-color: #d4edda;
        border: 1px solid #c3e6cb;
        color: #155724;
        padding: 15px;
        border-radius: 5px;
        margin: 20px 0;
      }
      .info-box {
        background-color: #e7f3ff;
        padding: 10px;
        border-left: 4px solid #28a745;
        margin: 10px 0;
      }
    </style>
  </head>
  <body>
    <div class='container'>
      <div class='header'>
        <h1>{{t 'email.email_changed.title'}}</h1>
      </div>
      <div class='content'>
        <p>{{t 'email.email_changed.greeting'}}, {{firstName}}</p>

        <div class='success-box'>
          <strong>{{t 'email.email_changed.success_message'}}</strong>
          {{t 'email.email_changed.confirmation_complete'}}
        </div>

        <p>{{t 'email.email_changed.details'}}:</p>
        <div class='info-box'>
          <strong>{{t 'email.email_changed.previous_email'}}:</strong>
          {{previousEmail}}<br />
          <strong>{{t 'email.email_changed.new_email'}}:</strong>
          {{newEmail}}<br />
          <strong>{{t 'email.email_changed.date'}}:</strong>
          {{changeDate}}
        </div>

        <p>{{t 'email.email_changed.security_note'}}{{t
            'email.email_changed.security_message'
          }}</p>

        <a href='{{accountSettingsLink}}' class='button'>{{t
            'email.email_changed.view_account'
          }}</a>

        <p>{{t 'email.email_changed.questions_contact'}}
          <strong>{{t 'email.email_changed.support'}}</strong></p>
      </div>
      <div class='footer'>
        <p>{{t 'email.footer_text'}}</p>
        <p>&copy;
          {{currentYear}}
          Taleb.tn.
          {{t 'email.all_rights_reserved'}}</p>
      </div>
    </div>
  </body>
</html>