<html lang='{{lang}}'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>{{t 'email.verification_otp.title'}}</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        line-height: 1.6;
        color: #333;
      }
      .container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
      }
      .header {
        background-color: #28a745;
        color: white;
        padding: 20px;
        text-align: center;
      }
      .content {
        padding: 20px;
        border: 1px solid #ddd;
      }
      .otp-code {
        background-color: #f8f9fa;
        border: 2px solid #28a745;
        padding: 15px;
        text-align: center;
        border-radius: 5px;
        margin: 20px 0;
        font-size: 24px;
        font-weight: bold;
        letter-spacing: 2px;
        color: #333;
      }
      .footer {
        text-align: center;
        padding: 20px;
        font-size: 12px;
        color: #666;
        border-top: 1px solid #ddd;
      }
      .warning {
        background-color: #fff3cd;
        padding: 10px;
        border-radius: 5px;
        margin: 10px 0;
      }
      .expiry {
        color: #28a745;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <div class='container'>
      <div class='header'>
        <h1>{{t 'email.verification_otp.title'}}</h1>
      </div>
      <div class='content'>
        <p>{{t 'email.verification_otp.greeting'}} {{username}},</p>
        <p>{{t 'email.verification_otp.message'}}</p>

        <div class='otp-code'>{{otpCode}}</div>

        <div class='warning'>
          <strong>{{t 'email.verification_otp.important'}}:</strong>
          {{t 'email.verification_otp.warning'}}
        </div>

        <p>
          {{t 'email.verification_otp.expiry'}}:
          <span class='expiry'>{{expiryTime}}</span>
        </p>

        <p>{{t 'email.verification_otp.questions'}}</p>
      </div>
      <div class='footer'>
        <p>{{t 'email.footer.regards'}}</p>
        <p>{{t 'email.footer.team'}}</p>
        <p>Â©{{currentYear}} {{t 'email.common.copyright'}}</p>
      </div>
    </div>
  </body>
</html>