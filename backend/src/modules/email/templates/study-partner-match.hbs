<html lang='{{lang}}'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>{{t 'email.study_partner_match.title'}}</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        line-height: 1.6;
        color: #333;
      }
      .container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
      }
      .header {
        background-color: #6f42c1;
        color: white;
        padding: 20px;
        text-align: center;
      }
      .content {
        padding: 20px;
        border: 1px solid #ddd;
      }
      .match-card {
        background-color: #f8f9fa;
        padding: 15px;
        border-radius: 5px;
        margin: 20px 0;
      }
      .match-info {
        margin: 10px 0;
      }
      .button {
        background-color: #6f42c1;
        color: white;
        padding: 12px 30px;
        text-decoration: none;
        border-radius: 5px;
        display: inline-block;
        margin: 20px 0;
      }
      .footer {
        text-align: center;
        padding: 20px;
        font-size: 12px;
        color: #666;
        border-top: 1px solid #ddd;
      }
      .percentage {
        background-color: #ddd;
        border-radius: 5px;
        padding: 5px 10px;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <div class='container'>
      <div class='header'>
        <h1>ðŸŽ‰ {{t 'email.study_partner_match.title'}}</h1>
      </div>
      <div class='content'>
        <p>{{t 'email.study_partner_match.greeting' username=username}}</p>
        <p>{{t 'email.study_partner_match.message'}}</p>

        <div class='match-card'>
          <div class='match-info'>
            <strong>{{t
                'email.study_partner_match.partner_name'
                partnerName=partnerName
              }}</strong>
          </div>
          <div class='match-info'>
            <strong>{{t
                'email.study_partner_match.common_interests'
                interests=interests
              }}</strong>
          </div>
          {{#if matchPercentage}}
            <div class='match-info'>
              <span class='percentage'>{{matchPercentage}}% Match</span>
            </div>
          {{/if}}
        </div>

        {{#if matchLink}}
          <a href='{{matchLink}}' class='button'>{{t
              'email.study_partner_match.cta'
            }}</a>
        {{/if}}
      </div>
      <div class='footer'>
        <p>{{t 'email.study_partner_match.footer'}}</p>
        <p>{{t 'email.common.copyright'}}</p>
      </div>
    </div>
  </body>
</html>