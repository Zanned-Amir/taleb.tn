<html lang='{{lang}}'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>{{t 'email.m2fa_otp.title'}}</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        line-height: 1.6;
        color: #333;
      }
      .container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
      }
      .header {
        background-color: #dc3545;
        color: white;
        padding: 20px;
        text-align: center;
      }
      .content {
        padding: 20px;
        border: 1px solid #ddd;
      }
      .otp-code {
        background-color: #f8f9fa;
        border: 2px solid #dc3545;
        border-radius: 5px;
        padding: 20px;
        text-align: center;
        margin: 20px 0;
      }
      .otp-code .code {
        font-size: 32px;
        font-weight: bold;
        color: #dc3545;
        letter-spacing: 5px;
        font-family: 'Courier New', monospace;
      }
      .otp-code .expiration {
        font-size: 14px;
        color: #666;
        margin-top: 10px;
      }
      .footer {
        text-align: center;
        padding: 20px;
        font-size: 12px;
        color: #666;
        border-top: 1px solid #ddd;
      }
      .warning {
        background-color: #fff3cd;
        color: #856404;
        padding: 10px;
        border-radius: 5px;
        margin: 10px 0;
      }
      .security-note {
        background-color: #f8d7da;
        color: #721c24;
        padding: 10px;
        border-left: 4px solid #dc3545;
        margin: 10px 0;
      }
    </style>
  </head>
  <body>
    <div class='container'>
      <div class='header'>
        <h1>{{t 'email.m2fa_otp.title'}}</h1>
      </div>
      <div class='content'>
        <p>{{t 'email.m2fa_otp.greeting'}}, {{firstName}}</p>

        <p>{{t 'email.m2fa_otp.message'}}</p>

        <div class='otp-code'>
          <div class='code'>{{otp}}</div>
          <div class='expiration'>{{t 'email.m2fa_otp.expires_in'}}
            {{expirationTime}}
            {{t 'email.m2fa_otp.minutes'}}</div>
        </div>

        <div class='warning'>
          <strong>{{t 'email.m2fa_otp.do_not_share'}}:</strong>
          {{t 'email.m2fa_otp.warning_message'}}
        </div>

        <p>{{t 'email.m2fa_otp.alternative_method'}}</p>

        <div class='security-note'>
          <strong>{{t 'email.m2fa_otp.security_alert'}}:</strong>
          {{t 'email.m2fa_otp.security_message'}}
        </div>

        <p>{{t 'email.m2fa_otp.questions_contact'}}
          <strong>{{t 'email.m2fa_otp.support'}}</strong></p>
      </div>
      <div class='footer'>
        <p>{{t 'email.footer_text'}}</p>
        <p>&copy;
          {{currentYear}}
          Taleb.tn.
          {{t 'email.all_rights_reserved'}}</p>
      </div>
    </div>
  </body>
</html>