# Development Environment Configuration
# This file serves as documentation for environment variables used in the Taleb Backend API
# Copy this file to .env and update values for your local development setup

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
NODE_ENV=development
PORT=3000
ENABLE_DOCUMENTATION=true
ENABLE_EMAIL_SERVICE=true
VERSION=1.0.0
APP_NAME=Taleb Backend API
FRONTEND_URL=http://localhost:3000

# ============================================================================
# JWT CONFIGURATION
# ============================================================================
# Secret key for JWT token signing (change in production)
JWT_SECRET=your-secret-key

# JWT token expiration time (e.g., 7d, 24h, 3600s)
JWT_EXPIRES_IN=7d

# Secret key for JWT refresh token signing (change in production)
JWT_REFRESH_SECRET=your-refresh-secret-key

# Refresh token expiration time
JWT_REFRESH_EXPIRES_IN=30d

# ============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# ============================================================================
# PostgreSQL server hostname
DATABASE_HOST=localhost

# PostgreSQL server port
DATABASE_PORT=5432

# PostgreSQL user username
DATABASE_USER=taleb_user

# PostgreSQL user password
DATABASE_PASSWORD=taleb_password

# PostgreSQL database name
DATABASE_NAME=taleb_db

# ============================================================================
# CACHE CONFIGURATION (Redis - Session/Cache)
# ============================================================================
# Redis server hostname
REDIS_HOST=localhost

# Redis server port
REDIS_PORT=6379

# Redis password (optional, set empty if no password)
REDIS_PASSWORD=your_redis_password

# Redis database number (0-15)
REDIS_DB=0

# ============================================================================
# MESSAGE QUEUE CONFIGURATION (BullMQ with Redis)
# ============================================================================
# Redis hostname for BullMQ
BULLMQ_REDIS_HOST=localhost

# Redis port for BullMQ
BULLMQ_REDIS_PORT=6379

# Redis password for BullMQ
BULLMQ_REDIS_PASSWORD=your_redis_password

# Redis database number for BullMQ
BULLMQ_REDIS_DB=1

# ============================================================================
# EMAIL SERVICE CONFIGURATION
# ============================================================================

# PRODUCTION EMAIL SETTINGS
# SMTP server hostname
EMAIL_HOST=smtp.your-email-provider.com

# SMTP server port
EMAIL_PORT=587

# SMTP authentication username
EMAIL_USER=your-email-user

# SMTP authentication password
EMAIL_PASSWORD=your-email-password

# Sender email address
EMAIL_FROM=noreply@taleb.tn

# Enable TLS/SSL encryption for SMTP connection
IS_EMAIL_SECURE=false

# DEVELOPMENT/TEST EMAIL SETTINGS
# Local SMTP server (e.g., Mailhog) hostname
EMAIL_HOST_TEST=localhost

# Local SMTP server port
EMAIL_PORT_TEST=1025

# Local SMTP authentication username
EMAIL_USER_TEST=your-test-email-user

# Local SMTP authentication password
EMAIL_PASSWORD_TEST=your-test-email-password

# Test sender email address
EMAIL_FROM_TEST=noreply@test.taleb.tn

# Enable TLS/SSL for test email server
IS_EMAIL_SECURE_TEST=false

# Enable email authentication
EMAIL_AUTH_ENABLED=false

# ============================================================================
# PASSWORD POLICY CONFIGURATION
# ============================================================================
# Minimum password length (recommended: 8+)
PASSWORD_MIN_LENGTH=8

# Require at least one uppercase letter (A-Z)
PASSWORD_REQUIRE_UPPERCASE=true

# Require at least one lowercase letter (a-z)
PASSWORD_REQUIRE_LOWERCASE=true

# Require at least one digit (0-9)
PASSWORD_REQUIRE_NUMBERS=true

# Require at least one special character (!@#$%^&*)
PASSWORD_REQUIRE_SPECIAL_CHARS=false

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================
# Frontend application domain for CORS and redirects
FRONTEND_DOMAIN=http://localhost:3000

# ============================================================================
# OAUTH PROVIDERS CONFIGURATION
# ============================================================================

# GOOGLE OAUTH
# Enable Google OAuth authentication
GOOGLE_ENABLED=true

# Google OAuth Client ID
GOOGLE_CLIENT_ID=

# Google OAuth Client Secret
GOOGLE_CLIENT_SECRET=

# Google OAuth callback URL
GOOGLE_CALLBACK_URL=http://localhost:3000/api/oauth/google/callback

# FACEBOOK OAUTH
# Enable Facebook OAuth authentication
FACEBOOK_ENABLED=false

# Facebook App ID
FACEBOOK_APP_ID=

# Facebook App Secret
FACEBOOK_APP_SECRET=

# Facebook OAuth callback URL
FACEBOOK_CALLBACK_URL=http://localhost:3000/api/oauth/facebook/callback

# GITHUB OAUTH
# Enable GitHub OAuth authentication
GITHUB_ENABLED=false

# GitHub OAuth Client ID
GITHUB_CLIENT_ID=

# GitHub OAuth Client Secret
GITHUB_CLIENT_SECRET=

# GitHub OAuth callback URL
GITHUB_CALLBACK_URL=http://localhost:3000/api/oauth/github/callback

# APPLE OAUTH
# Enable Apple OAuth authentication
APPLE_ENABLED=false

# Apple OAuth Client ID (Bundle ID or Service ID)
APPLE_CLIENT_ID=

# Apple Team ID
APPLE_TEAM_ID=

# Apple Key ID
APPLE_KEY_ID=

# Apple Private Key (in PEM format)
APPLE_PRIVATE_KEY=

# Apple OAuth callback URL
APPLE_CALLBACK_URL=http://localhost:3000/api/oauth/apple/callback
